{
  "name": "mongodb-proxy",
  "version": "0.2.2",
  "description": "a REST api that works as a proxy for using MongoDB through HTTP endpoints",
  "main": "/api/index.js",
  "scripts": {
    "setup": "npm i --save typescript && npm install --include=dev",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon ./src/index.ts",
    "build": "npm i --save typescript && tsc -p ./tsconfig.json",
    "watch:ts": "npm i --save typescript && tsc -p ./tsconfig.json --watch",
    "watch:js": "nodemon ./api/index.js"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.1",
    "mongodb": "4.9",
    "nodemon": "2.0.20",
    "ts-node": "10.9.1",
    "tsc": "2.0.4",
    "tslib": "2.4.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@types/express": "4.17.14",
    "@types/mongodb": "4.0.7",
    "dotenv": "16.0.2",
    "vercel": "^28.4.6"
  },
  "private": "true",
  "author": "Dave Inchy <dave@doonline.nl>",
  "license": "MIT"
}
